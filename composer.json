{
  "name": "timdev/php-stack-logger",
  "description": "A PSR-3 Logger that can track context.",
  "type": "library",
  "require": {
    "php": "^8.0",
    "psr/log": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "TimDev\\StackLogger\\": "src/",
      "TimDev\\StackLogger\\Test\\": "tests/"
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Tim Lieberman",
      "email": "tim@timdev.com"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^9",
    "monolog/monolog": "^2.1",
    "laminas/laminas-log": "^2.12",
    "vimeo/psalm": "^4.9",
    "squizlabs/php_codesniffer": "^3.5",
    "psalm/plugin-phpunit": "^0.16.1"
  },
  "scripts": {
    "test": "phpunit --coverage-text --colors=always --testdox",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf"
  }
}
